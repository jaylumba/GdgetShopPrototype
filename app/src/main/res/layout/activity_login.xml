<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jcl.com.gadgetshop.modules.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_gadgetshop_logo" />

    <TextView
        android:id="@+id/tv_title"
        fontPath="fonts/Montserrat-Bold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Gadget Shop"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/fontsize_display2"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/tv_tagline"
        fontPath="fonts/OpenSans-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Upgrading your lifestyle"
        android:textColor="@color/colorTagline"
        android:textSize="@dimen/fontsize_title"
        tools:ignore="MissingPrefix" />


    <EditText
        android:id="@+id/et_emailadd"
        style="@style/TextFieldNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tagline"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/spacing_base4x"
        android:hint="Email" />

    <EditText
        android:id="@+id/et_password"
        style="@style/TextFieldPasswordDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_emailadd"
        android:layout_marginTop="@dimen/spacing_base2x"
        android:hint="Password" />


    <Button
        android:id="@+id/btn_login"
        style="@style/AppTheme.ButtonStyle.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password"
        android:layout_marginTop="@dimen/spacing_base2x"
        android:text="LOGIN TO ACCOUNT" />


    <TextView
        android:id="@+id/tv_or"
        fontPath="fonts/OpenSans-Semibold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:gravity="center"
        android:padding="@dimen/spacing_base2x"
        android:text="OR"
        android:textSize="@dimen/fontsize_textfield"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btn_fb"
        style="@style/AppTheme.ButtonStyle.Fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_or"
        android:drawableLeft="@drawable/ic_facebook_white_24dp"
        android:drawableStart="@drawable/ic_facebook_white_24dp"
        android:text="SIGN IN WITH FACEBOOK" />

</RelativeLayout>
