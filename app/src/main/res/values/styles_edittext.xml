<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorTextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorErrorMessage</item>
        <item name="android:labelTextSize">@dimen/fontsize_texthint</item>
    </style>

    <style name="TextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:labelTextSize">@dimen/fontsize_texthint</item>
    </style>

    <style name="TextField" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/fontsize_textfield</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="TextFieldMultiline" parent="@style/TextField">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/fontsize_textfield</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat.Body1">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">@dimen/fontsize_body1</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextFieldBold" parent="@style/TextField">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DisplayTypeTextField" parent="@style/TextField">
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="TextFieldPassword" parent="TextField">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextFieldNext" parent="@style/TextField">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextFieldDone" parent="@style/TextField">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TextFieldPasswordNext" parent="@style/TextFieldPassword">
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextFieldPasswordDone" parent="@style/TextFieldPassword">
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="TextFieldMultilineDone" parent="@style/TextFieldMultiline">
        <item name="android:imeOptions">actionDone</item>
    </style>

</resources>